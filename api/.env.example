# Application
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
SECRET_KEY=your-secret-key-here-min-32-chars-CHANGE-ME

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/creative_testing_saas

# Meta/Facebook OAuth
META_APP_ID=your-meta-app-id-CHANGE-ME
META_APP_SECRET=CHANGE-ME-rotate-this-secret
META_API_VERSION=v23.0
META_REDIRECT_URI=http://localhost:8000/auth/facebook/callback

# Stripe (test mode)
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_PRO=price_pro
STRIPE_PRICE_ENTERPRISE=price_enterprise

# Redis & Jobs
REDIS_URL=redis://localhost:6379/0

# Storage (Cloudflare R2 or S3)
STORAGE_MODE=local
LOCAL_DATA_ROOT=./data
STORAGE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=your_r2_access_key
STORAGE_SECRET_KEY=your_r2_secret_key
STORAGE_BUCKET=creative-testing-data
STORAGE_REGION=auto

# Security - Token Encryption & JWT
TOKEN_ENCRYPTION_KEY=your-32-byte-fernet-key-CHANGE-ME
JWT_ISSUER=creative-testing-api
SESSION_SECRET=your-session-secret-min-32-chars-CHANGE-ME

# Cookie Settings (cross-site compatibility)
# COOKIE_SAMESITE: "lax" for same eTLD+1 (e.g., app.domain.com + api.domain.com)
#                  "none" for different domains (e.g., vercel.app + fly.dev) - requires HTTPS
COOKIE_SAMESITE=lax
# COOKIE_DOMAIN: "" for current domain only, ".yourdomain.com" for subdomain sharing
COOKIE_DOMAIN=

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://fred1433.github.io

# Dashboard URL (for OAuth redirect & CSRF validation)
DASHBOARD_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Sentry (optional, for error monitoring)
SENTRY_DSN=
